@model List<Course>
<h2>Courses with No department</h2>
<ul>
@foreach(Course curs in Model)
{
        <li style="margin:10px">@curs.Name <a asp-action="GetOneCourseByName" asp-controller="Course" asp-route-Name="@curs.Name" class="btn btn-primary">Details</a> <a asp-action="Edit" asp-controller="Course" asp-route-Name="@curs.Name" class="btn btn-primary">Edit</a> <a asp-action="Delete" asp-controller="Course" asp-route-Name="@curs.Name" class="btn btn-primary">Delete</a></li>
}
</ul>